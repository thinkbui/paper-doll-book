<h1><%= @layer.name %></h1>
<br />
<a href="<%= book_layers_path(@book) %>" class="btn btn-info">Back to LAYERS</a>
<br />
<table class="table table-striped table-bordered">
  <tr>
    <th class="fit text-right">IID:</th>
    <td><%= @layer.iid %></td>
  </tr>
  <tr>
    <th class="fit text-right">PAGE:</th>
    <td>
      <% if @layer.page.present? %>
        <a href="<%= @page_url %>" class="btn btn-info"><%= @layer.page.name %></a>
      <% else %>
        (none)
      <% end %>
    </td>
  </tr>
  <tr>
    <th class="fit text-right">ORDER:</th>
    <td><%= @layer.order %></td>
  </tr>
  <tr>
    <th class="fit text-right">CONTROLS:</th>
    <td><%= @layer.get_control_name %></td>
  </tr>
  <tr>
    <th class="fit text-right">DISPLAY:</th>
    <td><%= @layer.display ? 'Yes' : 'No' %></td>
  </tr>
  <tr>
    <th class="fit text-right">CURRENT:</th>
    <td><%= @layer.current %></td>
  </tr>
</table>
<br />
<a href="<%= edit_book_layer_path(@layer, book_id: @book.id) %>" class="btn btn-secondary">EDIT</a>
<%= link_to 'DELETE', book_layer_path(@layer, book_id: @book.id),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-danger" %>
<br />
<a href="<%= book_layer_layer_pages_path(@book,@layer) %>" class="btn btn-info">LAYER PAGES</a>
