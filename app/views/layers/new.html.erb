<%= form_for(@layer, url: book_layers_path(@layer, book_id: @book.id), html: { method: :post }) do |f| %>
  <%= f.label 'Name' %><br>
  <%= f.text_field :name %><br>

  <%= f.label 'IID' %><br>
  <%= f.text_area :iid %><br>

  <%= f.label 'Controls' %><br>
  <%= f.text_area :controls %><br>

  <%= f.label 'Current' %><br>
  <%= f.text_area :current %><br>

  <%= f.submit "SUBMIT", :class => 'btn-special' %>
<% end %>
<br />
<a href="<%= book_layers_path(@book) %>" class="btn-default">CANCEL</a>
