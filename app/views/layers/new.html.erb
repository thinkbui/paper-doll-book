<%= form_for(@layer, url: book_layers_path(@layer, book_id: @book.id), html: { method: :post }) do |f| %>
  <%= f.label 'Name' %><br>
  <%= f.text_field :name %><br>

  <%= f.label 'IID' %><br>
  <%= f.text_area :iid %><br>

  <%= f.label 'Page' %><br>
  <%= f.select :page_id, @book.pages_list_select_sorted.collect{ |page| [ page.list_select_name, page.id ] }, include_blank: true %><br>

  <%= f.label 'Order' %><br>
  <%= f.text_area :order %><br>

  <%= f.label 'Controls' %><br>
  <%= f.select :controls, Layer::CONTROLS.map.with_index{ |p,i| [ p, i ] } %><br>

  <%= f.label 'Display' %><br>
  <%= f.check_box :display %><br>

  <%= f.label 'Current' %><br>
  <%= f.text_area :current %><br>

  <%= f.submit "SUBMIT", :class => 'btn btn-primary' %>
<% end %>
<br />
<a href="<%= book_layers_path(@book) %>" class="btn btn-info">CANCEL</a>
