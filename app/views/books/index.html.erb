<h1>Books</h1>
<a href="<%= new_book_path() %>" class="btn btn-secondary float-right">NEW BOOK</a>
<table class="table table-striped table-bordered">
	<thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.name %>
        </td>
        <td><%= book.description %></td>
        <td>
          <a href="<%= book_path(book) %>" class="btn btn-info">VIEW</a>
          <a href="<%= edit_book_path(book) %>" class="btn btn-secondary">EDIT</a>
          <%= link_to 'DELETE', book_path(book),
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>