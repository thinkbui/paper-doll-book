<%= form_for(@layer_page, url: book_layer_layer_pages_path(@layer_page, book_id: @book.id, layer_id: @layer.id), html: { method: :post }) do |f| %>
  <%= f.label 'Name' %><br>
  <%= f.text_field :name %><br>

  <%= f.label 'Source' %><br>
  <%= f.text_area :src %><br>

  <%= f.label 'Order' %><br>
  <%= f.text_area :order %><br>

  <%= f.label 'z_index' %><br>
  <%= f.text_area :z_index %><br>

  <%= f.submit "SUBMIT", :class => 'btn-special' %>
<% end %>
<br />
<a href="<%= book_layer_layer_pages_path(@book, @layer) %>" class="btn btn-info">CANCEL</a>
