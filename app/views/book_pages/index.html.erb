<a href="<%= book_path(@book) %>" class="btn btn-info">&larr; Back to <%= @book.name %></a>
<h1>Pages for <%= @book.name %></h1>
<a href="<%= new_book_book_page_path(@book) %>" class="btn btn-secondary float-right">NEW PAGE FOR BOOK</a>
<table class="table table-striped table-bordered">
	<thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Order</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @book_pages.each do |page| %>
      <tr>
        <td>
          <%= page.name %>
        </td>
        <td>
          <%= page.order %>
        </td>
        <td>
          <a href="<%= book_book_page_path(@book, page) %>" class="btn btn-info">VIEW</a>
          <a href="<%= edit_book_book_page_path(page, book_id: @book.id) %>" class="btn btn-secondary">EDIT</a>
          <%= link_to 'DELETE', book_book_page_path(page, book_id: @book.id),
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>