header {
  background-color: black;
}

table, th, td {
  border: 1px solid black;
}

input.btn-special {
  background-color: #4caf50;
  border: none;
  border-radius: 5px;
  color: white;
  padding: 14px 25px;
  margin: 10px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  font-family: "Times New Roman";
}

input.btn-special:hover {
  background-color: green;
}

